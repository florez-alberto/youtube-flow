{
    "manifest_version": 3,
    "name": "YouTube Flow",
    "version": "1.0.1",
    "description": "Automatically bypasses the 'Video paused. Continue watching?' prompt on YouTube.",
    "author": "Alberto Florez",
    "icons": {
        "128": "icon-128.png",
        "64": "icon-64.png",
        "32": "icon-32.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "youtube-flow@extension",
            "strict_min_version": "142.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}